---
export interface Props {
    title: string;
    icon: string;
}

const { title, icon } = Astro.props as Props
---

<li class="p-8 m-0 lg:w-[min(420px,30vw)] flex flex-col items-center rounded-2xl border border-white/10 bg-gradient-to-br from-gray-800/30 to-gray-900/30 backdrop-blur-sm">
  <div class="w-16 h-16 mb-4 rounded-2xl flex items-center justify-center">
    <img src={icon} alt="" width="32px" height="32px" class="invert opacity-90">
  </div>
  <h2 class="text-2xl font-bold font-title mb-4">
    {title}
  </h2>
  <p class="text-center text-white/70 leading-relaxed">
    <slot />
  </p>
</li>
